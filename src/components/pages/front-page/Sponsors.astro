---
import Sponsor from "./Sponsor.astro";

interface Item {
  name: string;
  source: string;
  description: string;
  link: string;
}

interface Props {
  items: Item[];
}

const { items } = Astro.props;
---

<ul class="flex w-full flex-wrap justify-center gap-8 p-0" aria-label="Sponsors">
  {
    items.map((item) => {
      return <Sponsor name={item.name} source={item.source} description={item.description} link={item.link} />;
    })
  }
</ul>
